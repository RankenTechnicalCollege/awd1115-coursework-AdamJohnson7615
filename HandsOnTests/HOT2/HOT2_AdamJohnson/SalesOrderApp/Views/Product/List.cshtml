@model IEnumerable<SalesOrderApp.Models.Product>

<div class="container mt-4">
    <h2>Products</h2>

    <table class="table table-light table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Short Description</th>
                <th>Long Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.ProductName</td>
                    <td>@p.ProductDescShort</td>
                    <td>@p.ProductDescLong</td>
                    <td>@p.ProductImage</td>
                    <td>@p.ProductPrice.ToString("C")</td>
                    <td>@p.ProductQty</td>
                    <td>@p.Category?.CategoryName</td>
                    <td>
                        <a asp-action="AddEdit" asp-route-id="@p.ProductID" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@p.ProductID" class="btn btn-primary btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="AddEdit" class="btn btn-primary mt-2">Add Product</a>
</div>
