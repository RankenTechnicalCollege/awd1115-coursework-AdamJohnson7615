<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlushShop</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body { font-family: 'PT Sans', sans-serif; padding-top: 70px; }
        .brand { font-weight:700; font-size:1.6rem; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand brand" asp-controller="Shop" asp-action="Index">PlushShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("Shop", "Index") ? "active" : "")" asp-controller="Shop" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("Shop", "Index") && ViewBag.SelectedSeries == null ? "active" : "")" asp-controller="Shop" asp-action="Index">All</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("Cart", "Index") ? "active" : "")" asp-controller="Cart" asp-action="Index">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info mt-3">@TempData["Message"]</div>
        }
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@functions {
    bool IsActive(string controller, string action)
    {
        var route = ViewContext.RouteData;
        var curController = route.Values["controller"]?.ToString();
        var curAction = route.Values["action"]?.ToString();
        return string.Equals(curController, controller, StringComparison.OrdinalIgnoreCase)
            && string.Equals(curAction, action, StringComparison.OrdinalIgnoreCase);
    }
}
