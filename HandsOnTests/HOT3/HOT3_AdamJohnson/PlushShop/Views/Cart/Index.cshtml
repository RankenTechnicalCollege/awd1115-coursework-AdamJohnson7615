@model PlushShop.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Cart";
}

<h2>Your Cart</h2>

@if (!Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model.Items)
            {
                <tr>
                    <td>
                        <img src="~/images/products/@it.ImageFileName" style="width:48px;height:48px;object-fit:contain" alt="@it.ProductName" />
                        <a asp-controller="Shop" asp-action="Details" asp-route-slug="@it.Slug">@it.ProductName</a>
                    </td>
                    <td>
                        <form method="post" asp-controller="Cart" asp-action="UpdateQuantity" class="d-flex align-items-center">
                            <input type="hidden" name="productId" value="@it.ProductId" />
                            <select name="qty" class="form-select form-select-sm me-2" style="width:70px;">
                                @for (int i = 1; i <= it.Stock; i++)
                                {
                                    if (it.Quantity == i)
                                    {
                                        <option value="@i" selected>@i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@i</option>
                                    }
                                }
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>@it.Price.ToString("C")</td>
                    <td>@((it.Price * it.Quantity).ToString("C"))</td>
                    <td>
                        <form method="post" asp-controller="Cart" asp-action="RemoveFromCart">
                            <input type="hidden" name="productId" value="@it.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <div>
            <strong>Total Items:</strong> @Model.TotalQuantity
        </div>
        <div>
            <strong>Total:</strong> @Model.TotalPrice.ToString("C")
        </div>
    </div>

    <form method="post" asp-controller="Cart" asp-action="Checkout" class="mt-3">
        <input type="hidden" name="customerName" value="Guest" />
        <button class="btn btn-primary">Purchase</button>
    </form>
}
