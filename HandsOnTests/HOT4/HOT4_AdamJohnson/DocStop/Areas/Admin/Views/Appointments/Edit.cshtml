@model DocStop.Models.Appointment
@{
    ViewData["Title"] = "Edit Appointment";
    var customers = ViewBag.Customers as List<DocStop.Models.Customer> ?? new();
}

<h2>Edit Appointment</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label"></label>
        <select asp-for="CustomerId" class="form-select"
                asp-items="@(new SelectList(customers, "Id", "Username", Model.CustomerId))">
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Start" class="form-label"></label>
        <input asp-for="Start" type="datetime-local" class="form-control"
               value="@Model.Start.ToString("yyyy-MM-ddTHH:mm")" />
        <div class="form-text">Must be in the future and start on the hour.</div>
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
