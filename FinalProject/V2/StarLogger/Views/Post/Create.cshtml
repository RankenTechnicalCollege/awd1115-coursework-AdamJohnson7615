@{
    ViewData["Title"] = "New Log";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header border-secondary">
                    <h3 class="pixel-font m-0"><i class="bi bi-pencil-square"></i> New Log</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Post" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label text-muted">Tag a Game (Optional)</label>
                            <select name="gameId" class="form-select bg-secondary text-white border-0">
                                <option value="">-- No Game --</option>
                                @if (ViewBag.Games != null)
                                {
                                    foreach (var game in (List<StarLogger.Models.Game>)ViewBag.Games)
                                    {
                                        <option value="@game.Id">@game.Title</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label text-muted">What's on your mind?</label>
                            <textarea name="content" class="form-control bg-secondary text-white border-0" rows="5" placeholder="Share your gaming thoughts..." required></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send-fill"></i> Post Update
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>