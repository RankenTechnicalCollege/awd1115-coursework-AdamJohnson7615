@model StarLogger.Models.Post

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header border-secondary">
                    <h3 class="pixel-font m-0"><i class="bi bi-pencil"></i> Edit Post</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        @* Game Dropdown *@
                        <div class="mb-3">
                            <label class="form-label text-muted">Tag a Game</label>
                            <select name="gameId" class="form-select bg-secondary text-white border-0">
                                <option value="">-- No Game --</option>
                                @if (ViewBag.Games != null)
                                {
                                    foreach (var game in (List<StarLogger.Models.Game>)ViewBag.Games)
                                    {
                                        // This logic selects the current game in the dropdown
                                        if (Model.GameId == game.Id)
                                        {
                                            <option value="@game.Id" selected>@game.Title</option>
                                        }
                                        else
                                        {
                                            <option value="@game.Id">@game.Title</option>
                                        }
                                    }
                                }
                            </select>
                        </div>

                        @* Content Area *@
                        <div class="mb-4">
                            <label class="form-label text-muted">Edit Content</label>
                            <textarea name="content" class="form-control bg-secondary text-white border-0" rows="5" required>@Model.Content</textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning flex-grow-1">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>