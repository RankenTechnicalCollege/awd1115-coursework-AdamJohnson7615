<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarLogger, Track and Log Your Gaming Adventures</title>
    <meta name="description" content="StarLogger: Track and share your gaming adventures." />
    <meta name="keywords" content="gaming, game tracker, video games, backlog, achievements, gamer community, game profiles, Starlogger">
    <link rel="icon" type="image/png" href="/images/star.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark text-white" style="font-family: 'Pixelify Sans', sans-serif;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(90deg, #0f0c29, #302b63, #24243e);">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/starlogger.png" alt="Starlogger Logo" class="img-fluid" style="height:40px; margin-right:10px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @* 1. HOME *@
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>

                        @* 2. GAMES *@
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Game" ? "active" : "")"
                               asp-area="" asp-controller="Game" asp-action="Index">
                                <i class="bi bi-search"></i> Games
                            </a>
                        </li>

                        @* 3. NEW LOG (Post Controller) *@
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Post" ? "active" : "")"
                               asp-area="" asp-controller="Post" asp-action="Create">
                                <i class="bi bi-pencil-square"></i> New Log
                            </a>
                        </li>

                        @* 4. COMMUNITY *@
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Community" ? "active" : "")"
                               asp-area="" asp-controller="Community" asp-action="Index">
                                <i class="bi bi-people-fill"></i> Community
                            </a>
                        </li>

                        @* 5. CONTACT *@
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")"
                               asp-area="" asp-controller="Contact" asp-action="Index">
                                <i class="bi bi-envelope-fill"></i> Contact Us
                            </a>
                        </li>

                        @* 6. ABOUT *@
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? "active" : "")"
                               asp-area="" asp-controller="About" asp-action="Index">
                                <i class="bi bi-star-fill"></i> About
                            </a>
                        </li>

                        @* 7. ADMIN (Only for Admins) *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2">
                                <a class="nav-link text-danger fw-bold border border-danger rounded px-2 @(ViewContext.RouteData.Values["area"]?.ToString() == "Admin" ? "active bg-danger text-white" : "")"
                                   asp-area="Admin" asp-controller="Users" asp-action="Index">
                                    <i class="bi bi-shield-lock-fill"></i> Admin Panel
                                </a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container my-5">
        @RenderBody()
    </div>

    <footer class="bg-secondary text-center py-3 mt-auto">
        &copy; @DateTime.Now.Year - Starlogger
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>