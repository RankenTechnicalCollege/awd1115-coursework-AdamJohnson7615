@page
@model StarLogger.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Join the Galaxy";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card bg-dark text-white border-secondary shadow-lg">
            <div class="card-header border-secondary text-center">
                <h2 class="pixel-font">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    @* --- USERNAME FIELD --- *@
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Username" class="form-control bg-secondary text-white border-0" autocomplete="username" aria-required="true" placeholder="StarGamer" />
                        <label asp-for="Input.Username" class="text-white-50">Username</label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control bg-secondary text-white border-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-white-50">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control bg-secondary text-white border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-white-50">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control bg-secondary text-white border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="text-white-50">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create Account</button>
                </form>
            </div>
            <div class="card-footer border-secondary text-center">
                <a asp-page="./Login" class="text-decoration-none text-info">Already have an account? Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}