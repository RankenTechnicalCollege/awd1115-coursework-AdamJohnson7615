@page
@model StarLogger.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card bg-dark text-white border-secondary shadow-lg">
            <div class="card-header border-secondary text-center">
                <h2 class="pixel-font">Welcome Back</h2>
            </div>
            <div class="card-body">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control bg-secondary text-white border-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-white-50">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control bg-secondary text-white border-0" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-white-50">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </form>
            </div>
            <div class="card-footer border-secondary text-center">
                <a asp-page="./Register" class="text-decoration-none text-info">Register as a new user</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}