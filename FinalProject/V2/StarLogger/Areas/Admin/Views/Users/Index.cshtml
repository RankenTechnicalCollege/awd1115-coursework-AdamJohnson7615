@model List<StarLogger.ViewModels.AdminUserViewModel>

@{
    ViewData["Title"] = "User Management";

    string[] colors = { "primary", "secondary", "success", "danger", "warning", "info", "light" };
    var random = new Random();
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 pixel-font text-white">Admin Panel</h1>
        <p class="lead text-white-50">Manage users and staff.</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger d-inline-block">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success d-inline-block">@TempData["Success"]</div>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var user in Model)
        {
            var color = colors[random.Next(colors.Length)];

            var roleText = user.IsAdmin ? "ADMIN" : "USER";
            var roleBadgeColor = user.IsAdmin ? "warning text-dark" : $"{color} text-dark";

            <div class="col">
                <div class="card h-100 bg-dark border-@color shadow hover-effect">
                    <div class="card-body text-center d-flex flex-column align-items-center justify-content-center">

                        @* Profile Picture with Badge *@
                        <div class="mb-3 position-relative">
                            <img src="@user.ProfilePictureUrl" class="rounded-circle border border-@color border-3"
                                 style="width: 80px; height: 80px; object-fit: cover;"
                                 alt="@user.UserName">

                            @* Badge: Shows Role instead of Game Count *@
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-@roleBadgeColor">
                                @roleText
                            </span>
                        </div>

                        @* Username *@
                        <h5 class="card-title pixel-font text-white mb-1">@user.UserName</h5>

                        @* Email (Subtext) *@
                        <p class="card-text text-white-50 small mb-3 text-truncate w-100">
                            @user.Email
                        </p>

                        @* --- ADMIN ACTIONS --- *@
                        <div class="mt-auto w-100 d-flex flex-column gap-2">
                            @if (user.UserName != "StarCommander")
                            {
                                @* Toggle Role *@
                                <form asp-action="ToggleRole" method="post" class="w-100">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    @if (user.IsAdmin)
                                    {
                                        <button class="btn btn-outline-light btn-sm w-100">Demote</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-warning btn-sm w-100">Promote</button>
                                    }
                                </form>

                                @* Delete *@
                                <form asp-action="Delete" method="post" class="w-100"
                                      onsubmit="return confirm('Are you sure? This will delete ALL their posts and games.');">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button class="btn btn-danger btn-sm w-100">Delete</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-dark btn-sm w-100 border-secondary" disabled>
                                    <i class="bi bi-lock-fill"></i> Protected
                                </button>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s ease-in-out;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
        }
</style>