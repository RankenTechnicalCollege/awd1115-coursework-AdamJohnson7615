<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarLogger, Track and Log Your Gaming Adventures</title>
    <meta name="description" content="StarLogger: Track and share your gaming adventures." />
    <meta name="keywords" content="gaming, game tracker, video games, backlog, achievements, gamer community, game profiles, Starlogger">

    <!-- Bootstrap 5.3.8 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark text-white" style="font-family: 'Pixelify Sans', sans-serif;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(90deg, #0f0c29, #302b63, #24243e);">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/images/starlogger.png" alt="Starlogger Logo" class="img-fluid" style="height:40px; margin-right:10px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#">Profile</a></li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Game" ? "active" : "")"
                               asp-controller="Game" asp-action="Index">Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Achievements" ? "active" : "")"
                               asp-controller="Achievements" asp-action="Index">Achievements</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#">Community</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Changelog</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-5">
        @RenderBody()
    </div>

    <footer class="bg-secondary text-center py-3 mt-auto">
        &copy; @DateTime.Now.Year - Starlogger
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Page-specific scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
