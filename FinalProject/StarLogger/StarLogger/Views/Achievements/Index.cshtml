@model IEnumerable<StarLogger.Models.Achievement>

@{
    ViewData["Title"] = "Achievements";
}

<h2>Achievements</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Achievement</a>
</p>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Game</th>
            <th>Points</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var achievement in Model)
        {
            <tr>
                <td>@achievement.Name</td>
                <td>@achievement.Game?.Title</td>
                <td>@achievement.Points</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@achievement.AchievementId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@achievement.AchievementId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
