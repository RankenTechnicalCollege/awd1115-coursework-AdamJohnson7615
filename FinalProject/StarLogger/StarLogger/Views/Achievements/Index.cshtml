@model IEnumerable<StarLogger.Models.Achievement>
@using StarLogger.Helpers

@{
    ViewData["Title"] = "Achievements";
}

<h2>Achievements</h2>

<p>
    <a class="btn btn-primary" asp-controller="Achievements" asp-action="Create" asp-area="">Add New Achievement</a>
</p>



<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Game</th>
            <th>Points</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var achievement in Model)
        {
            var slug = SlugHelper.ToSlug(achievement.Name);
            <tr>
                <td>@achievement.Name</td>
                <td>@achievement.Game?.Title</td>
                <td>@achievement.Points</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@achievement.AchievementId" asp-route-slug="@slug">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@achievement.AchievementId" asp-route-slug="@slug">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@achievement.AchievementId" asp-route-slug="@slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
