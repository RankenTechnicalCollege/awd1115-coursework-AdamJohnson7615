@model StarLogger.Models.Achievement
@using StarLogger.Helpers

<h2>Achievement Details</h2>

<div>
    <h4>@Model.Name</h4>
    <p>
        <strong>Game:</strong>
        @if (Model.Game != null)
        {
            var gameSlug = SlugHelper.ToSlug(Model.Game.Title);
            <a asp-controller="Game"
               asp-action="Details"
               asp-route-id="@Model.Game.GameId"
               asp-route-slug="@gameSlug">
                @Model.Game.Title
            </a>
        }
    </p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Points:</strong> @Model.Points</p>
</div>

@{
    var slug = SlugHelper.ToSlug(Model.Name);
}

<p>
    <a asp-action="Edit" asp-route-id="@Model.AchievementId" asp-route-slug="@slug" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.AchievementId" asp-route-slug="@slug" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
