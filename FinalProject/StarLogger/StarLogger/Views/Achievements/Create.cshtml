@model StarLogger.Models.Achievement

@{
    ViewData["Title"] = "Create Achievement";
}

<h2>@ViewData["Title"]</h2>

@if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var ms in ViewData.ModelState.Values)
            {
                foreach (var error in ms.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form asp-action="Create" asp-controller="Achievements" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Points" class="form-label"></label>
        <input asp-for="Points" type="number" class="form-control" min="0" max="1000" />
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GameId" class="form-label"></label>
        <select asp-for="GameId" class="form-select" asp-items="@(ViewData["GameId"] as SelectList)" required>
        </select>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
