@model Project1_PriceQuotation.Models.PriceQuotation

@{
    ViewData["Title"] = "Price Quotation";
}

<header class="bg-success text-white text-center py-3 mb-4">
    <h1>
        <i class="fas fa-money-bill-wave"></i> Price Quotation
    </h1>
</header>

<div class="container">
    <form asp-action="Index" method="post" class="row g-3">

        <!-- Subtotal -->
        <div class="col-12">
            <label asp-for="Subtotal">Subtotal:</label>
            <input asp-for="Subtotal" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Subtotal" class="text-danger"></span>
        </div>

        <!-- Discount Percent -->
        <div class="col-12">
            <label asp-for="DiscountPercent">Discount Percent:</label>
            <input asp-for="DiscountPercent" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>

        <!-- Discount Amount -->
        <div class="col-12">
            <label>Discount Amount:</label>
            <p class="form-control-plaintext">@Model.DiscountAmount.ToString("C")</p>
        </div>

        <!-- Total -->
        <div class="col-12">
            <label>Total:</label>
            <p class="form-control-plaintext">@Model.Total.ToString("C")</p>
        </div>

        <!-- Buttons -->
        <div class="col-12 d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-success">Calculate</button>
            <button type="button" class="btn btn-success" onclick="window.location='@Url.Action("Clear", "Home")'">Clear</button>
        </div>


    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
