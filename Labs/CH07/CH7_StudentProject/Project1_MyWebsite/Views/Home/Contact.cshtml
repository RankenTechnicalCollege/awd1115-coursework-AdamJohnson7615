@model List<(string Label, string Value)>

@section Header {
    <h1>Contact Me</h1>
}

<div class="container">
    @for (int i = 0; i < Model.Count; i++)
    {
        var contact = Model[i];
        var isLast = i == Model.Count - 1;
        <div class="d-flex justify-content-between border-bottom @(isLast ? "border-secondary" : "border-light") py-2">
            <span>@contact.Label</span>
            <span>@contact.Value</span>
        </div>
    }
</div>
