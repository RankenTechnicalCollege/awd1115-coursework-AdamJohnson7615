@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var area = ViewContext.RouteData.Values["area"]?.ToString();
    var title = ViewData["Title"] as string ?? "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@title - MyWebsite</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        /* Minimal tweaks for navbar */
        .navbar-boxed {
            width: 900px; /* Boxed width */
            margin: 20px auto; /* Centered horizontally */
            padding: 1rem 2rem; /* Taller, more padding */
            border-radius: 0; /* Rectangle shape */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-boxed">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyWebsite</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link @(title == "Home" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(title == "About" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(title == "Contact" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link @(area == "Help" ? "active" : "")"
                       asp-area="Help" asp-controller="Home" asp-action="Index">Help</a>
                </li>
            </ul>
        </div>
    </nav>

    <header class="text-center my-4">
        @RenderSection("Header", required: true)
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
