@*
    Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Trips Log</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <header class="bg-primary text-white text-center py-4">
        <h1 class="mb-0">Trips Log</h1>
        @if (!string.IsNullOrEmpty(ViewBag.SubHeader as string))
        {
            <h2 class="fs-4 mt-2">@ViewBag.SubHeader</h2>
        }
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3">
        <small>&copy; @DateTime.Now.Year - Project1_TripsLog</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
