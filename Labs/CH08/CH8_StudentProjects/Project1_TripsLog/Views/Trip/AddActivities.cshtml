@model Project1_TripsLog.ViewModels.TripActivities

@{
    ViewData["Title"] = "Add Activities";
}

<h2>Add Activities</h2>

@if (ViewBag.SubHeader != null)
{
    <h4>@ViewBag.SubHeader</h4>
}

<form asp-action="AddActivities" method="post" novalidate>
    <div class="form-group">
        <label asp-for="Activity1"></label>
        <input asp-for="Activity1" class="form-control" placeholder="Enter first activity (optional)" />
        <span asp-validation-for="Activity1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Activity2"></label>
        <input asp-for="Activity2" class="form-control" placeholder="Enter second activity (optional)" />
        <span asp-validation-for="Activity2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Activity3"></label>
        <input asp-for="Activity3" class="form-control" placeholder="Enter third activity (optional)" />
        <span asp-validation-for="Activity3" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Finish</button>
    <a asp-action="Cancel" class="btn btn-secondary ml-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
