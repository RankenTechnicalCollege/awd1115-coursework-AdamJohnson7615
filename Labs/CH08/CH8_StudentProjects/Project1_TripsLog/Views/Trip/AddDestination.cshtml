@model Project1_TripsLog.ViewModels.TripDestination

@{
    ViewData["Title"] = "Add Destination";
}

<h2>Add Destination</h2>

<form asp-action="AddDestination" method="post" novalidate>
    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" placeholder="Enter your destination" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccommodationName"></label>
        <input asp-for="AccommodationName" class="form-control" placeholder="Enter accommodation name" />
        <span asp-validation-for="AccommodationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-action="Cancel" class="btn btn-secondary ml-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
