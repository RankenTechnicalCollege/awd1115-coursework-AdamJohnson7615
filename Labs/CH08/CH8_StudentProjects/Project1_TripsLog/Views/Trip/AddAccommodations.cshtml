@model Project1_TripsLog.ViewModels.TripAccommodations

@{
    ViewData["Title"] = "Add Accommodations";
}

<h2>Add Accommodations</h2>

@if (ViewBag.SubHeader != null)
{
    <h4>@ViewBag.SubHeader</h4>
}

<form asp-action="AddAccommodations" method="post" novalidate>
    <div class="form-group">
        <label asp-for="AccommodationPhone"></label>
        <input asp-for="AccommodationPhone" class="form-control" placeholder="Enter phone number (optional)" />
        <span asp-validation-for="AccommodationPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccommodationEmail"></label>
        <input asp-for="AccommodationEmail" class="form-control" placeholder="Enter email address (optional)" />
        <span asp-validation-for="AccommodationEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-action="Cancel" class="btn btn-secondary ml-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
