@model Project1_ContactManager.Models.Contact
@{
    ViewData["Title"] = "Contact Details";
}
<h2>Contact Details</h2>

<table class="details-table">
    <tr><td>Name</td><td>@Model.FirstName @Model.LastName</td></tr>
    <tr><td>Phone</td><td>@Model.Phone</td></tr>
    <tr><td>Email</td><td>@Model.Email</td></tr>
    <tr><td>Category</td><td>@Model.Category.Name</td></tr>
    <tr><td>Date Added</td><td>@Model.DateAdded.ToString("MM/dd/yyyy h:mm tt")</td></tr>
</table>

<div class="btn-group-inline mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-black">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ContactId" class="btn btn-black">Delete</a>
    <a asp-action="Index" class="btn btn-black">Home</a>
</div>
