@model IEnumerable<Project1_QuarterlySales.Models.Sales>
@{
    ViewData["Title"] = "Quarterly Sales";
}

<h1>Quarterly Sales</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <select name="employeeId" asp-items="ViewBag.EmployeeList" class="form-select" onchange="this.form.submit()">
                <option value="">All Employees</option>
            </select>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Quarter</th>
            <th>Year</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Employee?.FullName</td>
                <td>@sale.Quarter</td>
                <td>@sale.Year</td>
                <td>@sale.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Add Sales Record</a>
    <a asp-controller="Employee" asp-action="Create" class="btn btn-secondary">Add New Employee</a>
</div>
