@model QuarterlySales.Models.Employee
@{
    ViewData["Title"] = "Add New Employee";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" class="form-control" type="date" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfHire"></label>
        <input asp-for="DateOfHire" class="form-control" type="date" />
        <span asp-validation-for="DateOfHire" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManagerId">Manager</label>
        <select asp-for="ManagerId" class="form-control" asp-items="@(new SelectList(ViewBag.Managers, "EmployeeId", "FirstName"))">
            <option value="0">-- No Manager --</option>
        </select>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
